@model Movie_StoreApp.Models.Review

<h1>Add Review</h1>
<form asp-action="Review_click" method="post">
    <div class="form-group">
        <label>Movie ID</label>
        <input asp-for="Movie_Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>User ID</label>
        <input asp-for="User_Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Review Text</label>
        <textarea asp-for="ReviewText" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Rating</label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>

@{
    if (TempData["msg1"] != null)
    {
        <script>
            alert('@TempData["msg1"]');
        </script>
    }
}

