@model MovieSearchViewModel

<h1>Search Movies</h1>

<form method="get" action="/User/search_index">
    <input type="text" name="searchTerm" placeholder="Search by title or genre..." value="@Model.SearchTerm" />
    <button type="submit">Search</button>
</form>

@if (Model.Movies != null && Model.Movies.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Release Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@movie.Movie_Title</td>
                    <td>@movie.Actors</td>
                    <td>@movie.ReleaseDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies found.</p>
}
