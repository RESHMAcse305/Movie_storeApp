@model Movie_StoreApp.Models.MovieInsert
<h2>movie Details</h2>
<form asp-action="MUpdate" class="form-horizontal" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">Movie Id:</label>
        @Html.TextBoxFor(m => m.Movie_Id)
    </div><br />
    <div class="form-group">
        <label class="control-label">Movie Title:</label>
        @Html.TextBoxFor(m => m.Movie_Title)
    </div><br />
    <div class="form-group">
        <label class="control-label">Release Date:</label>
        @Html.TextBoxFor(m => m.ReleaseDate)
    </div><br/>
    <div class="form-group">
        <label class="control-label">Genre:</label>
        <select asp-for="GenreId" asp-items="@(new SelectList(ViewBag.Genres, "GenreId", "GenreName"))" class="form-control">
            <option value="">Select Genre</option>
        </select>
    </div><br/>
    <div class="form-group">
        <label class="control-label">Director:</label>
        <select asp-for="DirectorId" asp-items="@(new SelectList(ViewBag.Directors, "DirectorId", "DirectorName"))" class="form-control">
            <option value="">Select Director</option>
        </select>
    </div><br/>
    <div class="form-group">
        <label class="control-label">Actors:</label>
        @Html.TextAreaFor(m => m.Actors)
    </div><br/>
    <div class="form-group">
        <label class="control-label">Description:</label>
        @Html.TextAreaFor(m => m.Description)
    </div><br/>
    <div class="form-group">
        <label class="control-label">Duration:</label>
        @Html.TextBoxFor(m => m.Duration)   
    </div>
    <div class="form-group">
        <label class="control-label">Rating:</label>
        @Html.TextBoxFor(m => m.Rating)
    </div><br/>
    <div class="form-group">
        <label class="control-label">Poster Image:</label>
        <img src="@Url.Content(Model.Poster_Image)" class="detailImage" width="200" height="200" alt="Movie Poster" />
    </div>
    <input type="hidden" asp-for="Poster_Image" />

    <div class="form-group">
        <label class="control-label">Upload New Poster Image:</label>
        <input asp-for="PosterFile" type="file" class="form-control" />
    </div>
    <br /><br />
    <input type="hidden" asp-for="GenreName" />
    <input type="hidden" asp-for="DirectorName" />

   
    <div class="form-group">
        <button type="submit" class="btn btn-success">Update </button>
    </div><br />

    <a class="btn btn-primary" href="@Url.Action("Admin_Home", "AdminHome")">Go to Home</a>
</form>

@{
    if (TempData["msg1"] != null)
    {
        <script>
            alert('@TempData["msg1"]');
        </script>
    }
}


