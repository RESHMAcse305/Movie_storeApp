@model Movie_StoreApp.Models.Genre
<h1>Add Genre</h1>
<form asp-action="Admin_pageclick" class="form-horizodal" method="post">
    <div class="form-group">
        <label class="control-label"> Genre Name:</label>
        <input asp-for="GenreName" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Genre Description:</label>
        <textarea asp-for="Genre_Description" type="text" class="form-control" autofocus></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn-outline-success">
    </div>
    <br />
    <a class="btn btn-primary" href="@Url.Action("Admin_Home","AdminHome")">Go to Home</a>

</form>
@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
        </script>
    }
}